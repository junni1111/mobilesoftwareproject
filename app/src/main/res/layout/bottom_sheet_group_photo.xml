<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bottomSheetlayout"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@drawable/r12_bottom_sheet_white"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:src="@drawable/ic_bottom_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/takePhotoBtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="51dp"
            android:background="@drawable/r12_primary_solid"
            android:drawablePadding="18dp"
            android:gravity="center"
            android:paddingStart="28dp"
            android:stateListAnimator="@null"
            android:text="사진 찍기"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/selectPhotoBtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/r12_primary_solid"
            android:drawablePadding="18dp"
            android:gravity="center"
            android:paddingStart="28dp"
            android:stateListAnimator="@null"
            android:text="갤러리에서 찾기"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/takePhotoBtn"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
